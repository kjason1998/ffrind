<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:id="@+id/message_background"
    android:clickable="true">

    <LinearLayout
        android:id="@+id/receiverLinearLayout"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8">
            <TextView
                android:id="@+id/recyclerViewChatMessageTextReceive"
                android:text="@string/chat_message_chat_view_message"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/default_message_text_background_dark"
                android:layout_margin="10dp"
                android:padding="15dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="2">

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/senderLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="2">

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:gravity="right">


            <TextView
                android:id="@+id/recyclerViewChatMessageTextSending"
                android:text="@string/chat_message_chat_view_message"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/default_message_text_background"
                android:layout_margin="10dp"
                android:padding="15dp"/>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>